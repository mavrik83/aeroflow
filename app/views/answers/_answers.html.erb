<div class="container">
  <% @answers.each do |a| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            submitted by:
            <%= link_to a.user.username.titleize, user_path(a.user_id), class: "text-dark" %>
            <small><%= time_ago_in_words(a.created_at) %> ago</small>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= a.title.capitalize %></h5>
            <p class="card-text"><%= truncate(a.content, length: 50) %></p>
            <%= link_to 'View', question_path(a.question_id), class: "btn btn-outline-dark" %>
            <% if logged_in? && current_user.admin?  %>
              <%= link_to 'Delete', answer_path(a), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger"  %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
