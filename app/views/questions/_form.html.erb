<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @question %>
      <%= form_with(model: @question, class: "shadow p-3 mb-5 bg-secondary rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Please add a descriptive title..." %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :content, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.text_area :content, rows: 10, class: "form-control shadow rounded", placeholder: "Include as many details as you can so other users can offer help..." %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.select :category_id, Category.all.collect {|x| [x.name.titleize, x.id]}, {}, class: "multiple form-control" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light"%>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to question list ]', questions_path, class: "text-secondary" %>
    </div>
  </div>
</div>
